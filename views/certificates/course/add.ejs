<% include ../../partials/header.ejs %>

<main class="container" style="margin-top:75px;">

<h1>Add a New Certification</h1>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="coursename" class=" control-label">Certification Name: </label>
        <input name="coursename" id="coursename" required />
    </div>
    <div class="form-group">
     <label for="coursetype" class=" control-label">Certification Type: </label>
    <select name="coursetype" id="coursetype">
         <!--  logic to populate the select dropdown   -->
<% for (var i = 0; i < courseType.length; i++) { %>
     <option class="list-group-item list-group-item-action" value="<%= courseType[i].coursetype%>">
            <%= courseType[i].coursetype %>
       </option>
    <% } %>
        </select>
         </div>
<div class="form-group">
<label for="certicon" class=" control-label">Choose an icon for this Certification</label>
         <input id="certicon" type="file" name="certicon" accept="image/*">
  </div>
    <button class="btn btn-success col-sm-offset-2">Save</button>
</form>

</main>



<%include ../../partials/footer.ejs%>
