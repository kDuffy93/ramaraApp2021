<!-- includes the partial file header.ejs -->
<% include partials/header.ejs %>

<main class="container" style="margin-top:75px;">
    <% if (returnURL.length > 0) { %>
    <div hidden="true">
<p hidden="true" id="returnURL"  value="<%= returnURL %>"><%= returnURL %><p>
    </div>
    <%  } %>
    <h1 class="col-xs-5 col-xs-offset-3" style="margin-bottom:20px;">Login</h1>
    <!--  checks the session to see if it needs to change the banner above login   -->
<% if (messages.length > 0) {
    if(messages1.length > 0)
    {%>
    <div class="col-xs-12 alert alert-danger alert-dismissable">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a> <%= messages %> </br> <%= messages1 %>  </div>

<% }
else
{ %>
<div class="col-xs-12 alert alert-danger alert-dismissable">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a> <%= messages %> </div>
  <% } }

else { %>

<div class="col-xs-12 alert alert-info alert-dismissable">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
   Please Enter your <strong> user ID </strong> </br> and <strong>password</strong> below!
  </div>

<% } %>
<!--  login form    -->
    <form method="post">
        <div class="form-group row" >
            <label for="username" class="col-xs-3 col control-label">user ID:</label>
            <input style="max-width:450px;" style="margin-bottom:10px;" class="col-xs-9" name="username" id="username" required />
        </div>
        <div class="form-group row" >
            <label   for="password" class="col-xs-3 control-label">Password:</label>
            <input style="max-width:450px;" class="col-xs-9" name="password" id="password" type="password" required />
            <button style="max-width:450px; margin-top:20px;" class="col-xs-4 col-xs-offset-4 btn btn-success">Login</button>
        </div>

    </form>

</main>
<!--   includes the partial file footer.ejs  -->
<% include partials/footer.ejs %>
