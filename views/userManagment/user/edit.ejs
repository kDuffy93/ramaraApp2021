<% include ../../partials/header.ejs %>

<main class="container" style="margin-top:75px;">



<form method="post" class="col col-xs-10 col-xs-offset-2">
    <h1>Edit Employee Record</h1>
    <div class="form-group row">
        <label for="username" class="col-sm-2 control-label">user ID: </label>
        <input name="username" id="username" required value="<%= user.username %>"/>
    </div>
    <div class="form-group row">
        <label for="firstName" class="col-sm-2 control-label">First Name: </label>
        <input name="firstName" id="firstName" required value="<%= user.firstName %>" />
    </div>
    <div class="form-group row">
        <label for="surName" class="col-sm-2 control-label">Last Name: </label>
        <input name="surName" id="surName" required value="<%= user.surName %>"/>
    </div>

   <div class="form-group row">
        <label for="departmentname" class="col-sm-2 control-label">Department: </label>
        <select name="departmentname" id="departmentname" >
            <!--  logic to populate the select dropdown   -->
<% for (var i = 0; i < departments.length; i++) {
 if(departments[i].departmentname == dptName){ %>
<option selected="selected" value="<%= departments[i].departmentname%>">
         <%= departments[i].departmentname%>
       </option>
 <% } %>
<% if(departments[i].departmentname != dptName ){ %>
<option  value="<%= departments[i].departmentname%>">
         <%= departments[i].departmentname%>
       </option>
 <% } %>

 <% } %>


        </select>

   </div>
   <div class="form-group row">
            <label for="email" class="col-sm-2 control-label">Email: </label>
            <input name="email" id="email"  type="email" value='<%= user.email %>'/>
        </div>
         <div class="form-group row">
            <label for="phonenumber" class="col-sm-2 control-label">Phone Number: </label>
            <input name="phonenumber" id="phonenumber"  type="tel" value="<%= user.phonenumber %>"/>
        </div>


 <div class="form-group row">
            <label for="password" class="col-sm-2 control-label">Password: </label>
            <input name="password" id="password" type="password" />
        </div>
            <div class="form-group row">
            <label for="confirm" class="col-sm-2 control-label">Re-Type Password: </label>
            <input name="confirm" id="confirm" type="password" />
            </div>

    <button class="btn btn-success col-sm-offset-2">Save</button>
</form>

</main>



<%include ../../partials/footer.ejs%>
